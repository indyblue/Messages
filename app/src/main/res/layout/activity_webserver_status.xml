<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Add a Toolbar for the action bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/webserver_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/webserver_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: Stopped"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/webserver_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Server"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!-- Port row with edit and refresh icon buttons -->
    <LinearLayout
        android:id="@+id/webserver_port_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/webserver_port_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Port: 00000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageButton
            android:id="@+id/webserver_port_edit_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Edit Port"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            android:tint="?attr/colorControlNormal"/>

        <ImageButton
            android:id="@+id/webserver_port_refresh_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_popup_sync"
            android:contentDescription="Randomize Port"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:tint="?attr/colorControlNormal"/>
    </LinearLayout>

    <!-- API Key row with edit and refresh icon buttons -->
    <LinearLayout
        android:id="@+id/webserver_api_key_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/webserver_api_key_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="API Key: ABC123"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:id="@+id/webserver_api_key_visibility_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="show"
            android:contentDescription="Toggle API Key Visibility"
            android:padding="6dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <ImageButton
            android:id="@+id/webserver_api_key_edit_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Edit API Key"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            android:tint="?attr/colorControlNormal"/>

        <ImageButton
            android:id="@+id/webserver_api_key_refresh_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_popup_sync"
            android:contentDescription="Randomize API Key"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:tint="?attr/colorControlNormal"/>
    </LinearLayout>

</LinearLayout>
